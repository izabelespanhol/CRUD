<h1>All Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>nome</th>
            <th>Data de Nascimento</th>
            <th>Login</th>
            <th>Telefone</th>
            <th>Documento</th>
            <th>Genêro</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <% usuarios.forEach(usuario => { %>
            <tr>
                <td><%= usuario.cod %></td>
                <td><%= usuario.nome %></td>
                <td><%= usuario.datanascimento %></td>
                <td><%= usuario.login %></td>
                <td><%= usuario.fone %></td>
                <td><%= usuario.documento %></td>
                <td><%= usuario.genero %></td>
                <td>
                    <a href="/usuarios/<%= usuario.cod %>" class="btn btn-primary">View</a>
                    <a href="/usuarios/<%= usuario.cod %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/usuarios/<%= usuario.cod %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
